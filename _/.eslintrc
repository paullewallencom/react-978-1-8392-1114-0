{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
   },
   "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true,
   },
   "rules": {
     "comma-dangle": [1, "always-multiline"],
     "max-len": [1, 180, 4],
     "arrow-body-style": [0],
     "new-cap": 0,
     "no-console": 0,
     "no-confusing-arrow": 0,
     "no-unused-vars": [ "error", {
      "varsIgnorePattern": "React"
    }],
    "react/jsx-filename-extension": 0,
    "react/sort-comp": 0,
   },
   "globals": {
     "jest": false,
     "expect": false,
     "React": false
   }
}
